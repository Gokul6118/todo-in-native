{
  "name": "shadcn-ui-monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,

  "workspaces": [
    "packages/*"
  ],

  "scripts": {
    "build:db": "pnpm --filter @repo/db build",
    "build:server": "pnpm --filter @repo/server build",
    "build:api": "tsup --config tsup.api.config.ts",

    "build": "pnpm run build:db && pnpm run build:server && pnpm run build:api",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },

  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "0.30.6",
    "prettier": "^3.8.1",
    "turbo": "^2.8.1",
    "typescript": "5.9.3"
  },

  "packageManager": "pnpm@10.4.1",

  "engines": {
    "node": "20.x"
  },

  "dependencies": {
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "zod": "^4.3.6"
  }
}
